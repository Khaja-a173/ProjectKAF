{
  "name": "restaurantos",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "predev": "node scripts/checkEnv.mjs dotenv_config_path=.env",
    "check:env": "node scripts/checkEnv.mjs dotenv_config_path=.env",
    "dev": "tsx watch --env-file=.env server/src/index.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "server": "tsx server/index.ts",
    "healthz": "tsx server/index.ts",
    "test": "vitest run --reporter=dot",
    "test:watch": "vitest",
    "test:rls": "vitest run tests/rls.spec.ts --reporter=dot",
    "test:table": "vitest run tests/table-session.spec.ts --reporter=dot",
    "test:ui": "vitest run tests/ui/**/*.spec.ts tests/ui/**/*.spec.tsx --reporter=dot",
    "test:orders": "vitest run tests/orders.spec.ts --reporter=dot",
    "test:all": "vitest run --reporter=dot",
    "dev:ui": "vite --host 0.0.0.0 --port 5173"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/postgres": "^6.0.2",
    "@headlessui/react": "^2.2.8",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/supabase-js": "^2.56.0",
    "@yudiel/react-qr-scanner": "^2.3.1",
    "bcryptjs": "^3.0.2",
    "date-fns": "^3.6.0",
    "dotenv": "^17.2.1",
    "fastify": "^5.5.0",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "ky": "^1.10.0",
    "lucide-react": "^0.441.0",
    "node-fetch": "^2.7.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "react-qr-scanner": "^1.0.0-alpha.11",
    "react-router-dom": "^6.26.1",
    "react-toastify": "^11.0.5",
    "recharts": "^3.1.2",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.11.24",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.20",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.41",
    "react-refresh": "^0.14.0",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.20.5",
    "typescript": "^5.5.4",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
